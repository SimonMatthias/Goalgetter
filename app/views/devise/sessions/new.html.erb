<body class="signin">
<div class="background-image-signin">
  <div class="card-signin">
    <h2 class="card-header">Log into your account</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "input-field" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "input-field" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-blue" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
</body>
