<body class="new_yearly">
  <div class="goal-form">
    <%= form_with(url: yearlygoals_path, method: 'post') do |form| %>
      <div class="question-box">
          <h1 class="goal-form-title">What are the three things you can do to get closer to your first five-year goal?</h1>
            <% 3.times do |i| %>
              <div>
                <%= form.text_field :'yearly_goal_1[title]', placeholder: "Yearly Goal #{i + 1} Title", class: "answer-box" %>
              </div>
              <div>
                <%= form.text_field :'yearly_goal_1[description]', placeholder: "Yearly Goal #{i + 1} Description", class: "answer-box" %>
              </div>
            <% end%>
          <div>
            <h1 class="goal-form-title">Which action is the most important one to get closer to your yearly goal?</h1>
            <div class="form-row">
              <% 3.times do |i| %>
                <div class="form-group">
                  <%= form.radio_button :most_important, "yearly_goal_#{i + 1}", id: "most_important#{i + 1}" %>
                </div>
                <div class="form-group">
                  <%= form.label :most_important1, "Yearly Goal #{i + 1}" %>
                </div>
              <% end %>
            </div>
        </div>
        <%= form.submit 'Save & Continue' , class: "btn btn-blue"%>
      <% end %>
    </div>
  </div>
</body>
