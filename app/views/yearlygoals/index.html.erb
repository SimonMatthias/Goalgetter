<body class="details-index">
  <%= render "shared/side-navbar" %>
  <div class="container-fluid" id="top-nav">
    <div class="nav-logout" id="dashboard-logout">
      <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-blue login"%>
    </div>
  </div>
  <div class="dashboard-content-index">
    <h1>Your Yearly goals</h1>
    <div class="medium-cards-container">
      <% current_user.yearlygoals.each do |yearlygoal| %>
          <div class="index-card">
          <h2><%=yearlygoal.title %></h2>
          <p><%=yearlygoal.description %></p>
          <%= link_to(image_tag("edit.png", style: 'height:40px; width:auto;'), edit_yearlygoal_path(yearlygoal), :method => :get) %>
          </div>
      <% end %>
    </div>
    <div class="progress-container">
      <h4> Your overall progress: <span style="color: #BD4A42"> 10% </span></h4>
      <div class="progressbar-tall" id="yearly-tall">
        <div class="progress-tall" id="yearly-progress">
        </div>
      </div>
    </div>
  </div>
