<body class="details-index">
  <%= render "shared/side-navbar" %>
  <div class="container-fluid" id="top-nav">
    <div class="nav-logout" id="dashboard-logout">
      <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-blue login"%>
    </div>
  </div>
  <div class="dashboard-content-index">
    <h1>Your 5 Year goals</h1>
    <div class="medium-cards-container">
      <% current_user.fiveyeargoals.each do |fiveyeargoal| %>
          <div class="index-card">
          <h2><%=fiveyeargoal.title %></h2>
          <p><%=fiveyeargoal.description %></p>
          <%= link_to(image_tag("edit.png", style: 'height:40px; width:auto;'), edit_fiveyeargoal_path(fiveyeargoal), :method => :get) %>
          </div>
      <% end %>
    </div>
    <div class="progress-container">
      <h4> Your overall progress: <span style="color: #2376C1"> 26% </span></h4>
      <div class="progressbar-tall">
        <div class="progress-tall">
        </div>
      </div>
    </div>
  </div>
