<body class="fiveyear">
<%= form_with(model: @form, url: fiveyeargoals_path, method: "post") do |form| %>
  <div class="form-group">
    <%= form.label :vision, "Imagine your life in five years. What do you see?" %>
    <%= form.text_area :vision, rows: 3, class: "form-control", required: true %>
  </div>

  <% 3.times do |i| %>
    <h4>Goal <%= i+1 %></h4>
    <div class="form-group">
      <%= form.label "title_#{i + 1}", "Goal Title" %>
      <%= form.text_field "title_#{i + 1}", class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= form.label "description_#{i + 1}", "Goal Description" %>
      <%= form.text_area "description_#{i + 1}", rows: 3, class: "form-control", required: true %>
    </div>
  <% end %>

  <%= form.submit "Save & Continue", class: "btn btn-primary" %>
<% end %>
</body>
